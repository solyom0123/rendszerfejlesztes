{% extends 'base.html.twig' %}

{% block title %}Company Dashboard{% endblock %}

{% block body %}
<div class="container-2">
    <h1>Company Dashboard</h1>

    <i class="fas fa-bell {% if unreadNotifs > 0%} hasNotif{% else %}noNotif{% endif %}" id="bell" onclick="show_notif()"></i>{% if unreadNotifs > 0 %}<span id="unreads">{{ unreadNotifs }}</span>{% endif %}

    <div id="notifs">

        {% if notifs|length>0 %}
            <span id="delete_notifs" onclick="delete_notifs()">Értesítések törlése</span>
        {% for notif in notifs %}
            <div class="notif_msg">
            {{ notif.message|raw }}
            </div>
        {% endfor %}
        {% else %}
            <div id="notice_text"> Nincs értesítése</div>
        {% endif %}
    </div>



    <table class="table">
        <a class="inner-btn" href="{{ path('dashboard_clear',{'type': 'company'}) }}">Choose other restaurant</a>

        <tbody>
        <tr>

            <th><h4>Listing options</h4></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('restaurant_edit',{'id':app.session.get('company')}) }}">Étterem szerkesztése</a></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('menu_index') }}">Menük Listázása</a></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('menu_category_index') }}">Menü Kategóriák Listázása</a></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('food_index') }}">Ételek Listázása</a></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('food_allergens_index') }}">Étel Allergén Listázása</a></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('food_images_index') }}">Étel kép Listázása</a></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('order_index') }}">Rendelések Listázása</a></th>
        </tr>
        <tr>

           <th> <h4>Creating options</h4></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('menu_new') }}">Új Menü Létrehozása</a></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('menu_category_new') }}">Új Menü Kategoria Létrehozása</a></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('food_new') }}">Új Étel Létrehozása</a></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('food_images_new') }}">Új Étel Kép Létrehozása</a></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('food_allergens_index') }}">Új Étel Allergén kezelés</a></th>
        </tr>
        <tr>
            <th><a class="inner-btn" href="{{ path('sale_index') }}">Akciok</a></th>
        </tr>

        <tr>
        </tr>
        </tbody>
    </table>
</div>


    <script>
        function show_notif() {
            var x = document.getElementById("notifs");
            if (x.classList.contains("hide")) {
                x.classList.remove("hide");
            } else {
                x.classList.add("hide");
            }
        }
    </script>
    <script>

        function delete_notifs() {
                $.ajax({url: "{{ path('dashboard_company_read_messages') }}",
                    success: function(result){
                        if(result.success){
                            location.reload();
                        }
                }});
        }
    </script>
{% endblock %}
